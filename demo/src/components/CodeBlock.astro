---
export type Props = {
  syntax: string;
};
const { syntax } = Astro.props;
---

<pre>
  <span class="codetype">{syntax.charAt(0).toUpperCase() + syntax.slice(1)}</span>
<code><slot /></code>
</pre>

<style>
  pre {
    position: relative;
    background: #eee;
    padding: 12px 16px;
    color: #313952;
    border: 1px solid #dfe3e8;
    border-radius: 8px;
    white-space: initial;
  }

  code {
    font-family: monospace;
    -moz-tab-size: 4;
    tab-size: 4;
    white-space: pre-wrap;
  }

  .codetype {
    position: absolute;
    right: 2px;
    top: 2px;
  }
</style>
